{% extends 'base.html.twig' %}

{% block title %}Confirmation du Rendez-vous{% endblock %}

{% block body %}
<style>
    .text-decrease {
        font-size: 100%; /* Réduit la taille du texte de 15% */
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4 text-decrease">Confirmation du Rendez-vous</h1>

    <div class="card bg-dark text-light p-4 rounded shadow-lg border-0">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-3 text-decrease">Créneau Sélectionné</h2>
                <p id="formattedDate" class="fw-bold fs-4 text-success text-decrease">{{ timeslot.startTime|date('c') }}</p>
            </div>
            
            <h3 class="mt-4 mb-3 text-decrease">Détails de la Réservation :</h3>
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-unstyled ps-0">
                        <li class="mb-2 text-decrease"><strong>Type de véhicule :</strong> <span class="badge bg-info text-dark text-decrease">{{ vehicleType }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Type de carburant :</strong> <span class="badge bg-info text-dark text-decrease">{{ fuelType }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Type de contrôle technique :</strong> <span class="badge bg-info text-dark text-decrease">{{ controlType }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Marque du véhicule :</strong> <span class="badge bg-info text-dark text-decrease">{{ carBrand }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Modèle du véhicule :</strong> <span class="badge bg-info text-dark text-decrease">{{ carModel }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Numéro de plaque :</strong> <span class="badge bg-info text-dark text-decrease">{{ licensePlate }}</span></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled ps-0">
                        <li class="mb-2 text-decrease"><strong>Nom :</strong> <span class="badge bg-info text-dark text-decrease">{{ firstname }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Prénom :</strong> <span class="badge bg-info text-dark text-decrease">{{ lastname }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Email :</strong> <span class="badge bg-info text-dark text-decrease">{{ email }}</span></li>
                        <li class="mb-2 text-decrease"><strong>Téléphone :</strong> <span class="badge bg-info text-dark text-decrease">{{ phone }}</span></li>
                    </ul>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="mb-3 fs-5 text-decrease">Souhaitez-vous confirmer ce rendez-vous ?</p>
                <form method="post" action="{{ path('app_timeslot_confirmation') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('confirm_timeslot') }}">
                    <button type="submit" class="btn btn-success btn-lg me-2 text-decrease">Oui, confirmer</button>
                    <a href="{{ path('app_timeslot_calendar') }}" class="btn btn-secondary btn-lg text-decrease">Non, revenir à l'étape précédente</a>
                </form>
            </div>
        </div>
    </div>
</div>

{% if isConfirmed %}
    <script>
        Swal.fire({
            title: 'Réservation Confirmée',
            text: 'Votre rendez-vous a été confirmé avec succès. Un e-mail vous a été envoyé.',
            icon: 'success',
            confirmButtonText: 'OK',
            customClass: {
                title: 'text-success',
                content: 'text-success'
            },
            backdrop: true,
            timer: 5000 // Ajoute un délai avant de rediriger
        }).then(() => {
            window.location.href = "{{ path('home') }}";  // Redirige vers la page d'accueil ou autre page
        });
    </script>
{% endif %}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const dateElement = document.getElementById('formattedDate');
        const dateValue = dateElement.innerText;

        const options = {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            hour12: false,
            locale: 'fr-FR'
        };

        const date = new Date(dateValue);
        dateElement.innerText = new Intl.DateTimeFormat('fr-FR', options).format(date);
    });
</script>

{% endblock %}
