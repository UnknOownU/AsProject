{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    /* Couleurs et polices globales */
    body {
        background-color: #1c1c1c;
        color: #e5e5e5;
        font-family: 'Roboto', sans-serif;
    }

    .navbar, .ftco_navbar {
        background-color: #333;
        padding: 10px 15px;
    }

    .navbar-brand span, .nav-link.active {
        color: #fca311;
    }

    .nav-link {
        color: #e5e5e5 !important;
    }

    /* Section Héro */
    .hero-wrap {
        background-color: #333;
        position: relative;
        background-size: cover;
        background-position: center; /* Centrer l'image */
        background-repeat: no-repeat; /* Empêcher la répétition */
        color: #e5e5e5;
        height: 75vh; /* Réglage de la hauteur pour correspondre à la carte */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-wrap .overlay {
        display: none; /* Désactiver l'overlay pour supprimer l'effet sombre */
    }

    .hero-wrap h1 {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.2;
    }

    .hero-wrap h1 span {
        color: #fff; /* "AS" en blanc */
    }

    .hero-wrap h1 span:last-child {
        color: #fca311; /* "Service" en jaune */
    }

    .hero-wrap p {
        color: #e5e5e5;
        font-size: 1.2rem;
    }

    /* Styles pour les boutons */
    .hero-buttons {
        margin-top: 30px;
        display: flex;
        gap: 20px; /* Espace entre les boutons */
        justify-content: center;
    }

    .hero-buttons .btn-custom {
        color: #fca311;
        border: 1px solid #fca311;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .hero-buttons .btn-custom:hover {
        background-color: #fca311;
        color: #1c1c1c;
    }

    /* Section Map */
    #map {
        width: 100%;
        height: 75vh; /* La même hauteur que le Hero */
        margin-top: 40px;
    }

    /* Footer */
    footer {
        background-color: #333;
        color: #e5e5e5;
        padding: 10px 0;
        text-align: center;
        font-size: 0.9rem;
    }

    footer a {
        color: #fca311;
        text-decoration: none;
    }

    footer a:hover {
        text-decoration: underline;
    }
</style>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

<div class="hero-wrap ftco-degree-bg" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-lg-8 ftco-animate text-center">
                <div class="text w-100 mb-md-5 pb-md-5">
                    <h1 class="mb-4"><span>AS</span> <span>Service</span></h1>
                    <p>Votre partenaire de confiance pour l'entretien, la réparation et la vente de véhicules.</p>
                    <div class="hero-buttons">
                        <a href="{{ path('annonces') }}" class="btn-custom">Voir les voitures disponibles</a>
                        <a href="{{ path('home') }}" class="btn-custom">Voir nos services</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map Section -->
<section class="ftco-section bg-light">
    <div class="container-fluid px-0">
        <div id="map"></div>
    </div>
</section>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<!-- Leaflet Map Initialization -->
<script>
    var map = L.map('map').setView([48.8566, 2.3522], 13); // Remplacer par les coordonnées de votre garage

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Application d'un thème de carte sombre
    L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker([48.8566, 2.3522]).addTo(map)
        .bindPopup('AS Service')
        .openPopup();
</script>
{% endblock %}
