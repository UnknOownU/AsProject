{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Étape 1: Choisir le type de véhicule</h1>

        {{ form_start(form) }}
            <div class="row">
                {% for child in form.carType %}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                {{ form_widget(child, {'attr': {'class': 'form-check-input d-none', 'data-toggle': 'button', 'autocomplete': 'off'}}) }}
                                <label class="form-check-label btn w-100 p-3" style="border: 2px solid #FFD700; color: white;" for="{{ child.vars.id }}">
                                    <span class="d-block mb-2">
                                        {% if child.vars.value == 'Véhicule particulier' %}
                                            <i class="fas fa-car fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Véhicule particulier 4x4' %}
                                            <i class="fas fa-truck-pickup fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Utilitaire' %}
                                            <i class="fas fa-truck fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Utilitaire 4x4' %}
                                            <i class="fas fa-truck-monster fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Véhicule spécifique' %}
                                            <i class="fas fa-trailer fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Camping car' %}
                                            <i class="fas fa-rv fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Véhicule de collection' %}
                                            <i class="fas fa-car-side fa-2x" style="color: white;"></i>
                                        {% elseif child.vars.value == 'Utilitaire caisse grand volume' %}
                                            <i class="fas fa-shuttle-van fa-2x" style="color: white;"></i>
                                        {% endif %}
                                    </span>
                                    {{ child.vars.label|trans }}
                                </label>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn" style="background-color: #FFD700; color: black;">Suivant</button>
            </div>
        {{ form_end(form) }}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Récupérer tous les éléments du groupe de boutons
            const buttons = document.querySelectorAll('.form-check-label');

            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    // Désactiver toutes les options
                    buttons.forEach(btn => {
                        btn.classList.remove('active');
                        btn.style.backgroundColor = '';
                        btn.style.color = 'white';
                        btn.previousElementSibling.checked = false;
                    });

                    // Activer le bouton cliqué
                    button.classList.add('active');
                    button.style.backgroundColor = '#FFD700';
                    button.style.color = 'black';
                    button.previousElementSibling.checked = true;
                });

                // Initialiser l'état actif basé sur la sélection
                if (button.previousElementSibling.checked) {
                    button.classList.add('active');
                    button.style.backgroundColor = '#FFD700';
                    button.style.color = 'black';
                }
            });
        });
    </script>
{% endblock %}
