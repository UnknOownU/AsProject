{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}AS SERVICES{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS via CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Leaflet CSS for map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>

    <!-- Custom CSS -->
    <style>
        /* Fond noir global */
        body {
            background-color: #000000;
            color: #FFFFFF;
        }

        /* Liens pour s'assurer qu'ils sont visibles sur fond noir */
        a {
            color: #FFD700; /* Or */
        }

        a:hover {
            color: #FFA500; /* Orange */
        }

        /* Ajustement des couleurs pour les cartes */
        .card {
            background-color: #1c1c1c; /* Noir foncé */
            border-color: #333333; /* Gris foncé */
        }

        .card-header {
            background-color: #2c2c2c; /* Gris foncé */
            color: #FFFFFF;
        }

        .card-body {
            color: #FFFFFF;
        }

        /* Ajustement de la navigation */
        .navbar, .ftco_navbar {
            background-color: #333333;
        }

        .navbar-brand span {
            color: #FFD700; /* Or */
        }

        .nav-link {
            color: #FFFFFF !important;
        }

        .nav-link.active {
            color: #FFA500 !important; /* Orange pour le lien actif */
        }
    </style>
</head>
<body>
    {% block body %}{% endblock %}
    
    <!-- jQuery and Bootstrap JS via CDN -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Other JS Files -->
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
</body>
</html>
